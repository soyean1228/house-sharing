<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mypage.MypageActivity">

    <RelativeLayout
        android:background="@drawable/mypage_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/mypage_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:text="김가치 님"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/my_house"
        android:layout_width="100dp"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/plus_house"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/plus_house"
        android:layout_width="180dp"
        android:layout_height="50dp" />

    <ImageView
        android:src="@drawable/zzim"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:background="@drawable/gray_box"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:id="@+id/mypage_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </ScrollView>

    </LinearLayout>



</LinearLayout>