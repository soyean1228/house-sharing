<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.JoinActivity">

        <ImageView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/signuptitle"
            android:layout_width="90dp"
            android:layout_height="50dp" />


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/input_id"
                    android:textSize="13dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp" />

                <EditText
                    android:background="@null"
                    android:id="@+id/nuser_id"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:scaleType="fitXY" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/input_pw"
                    android:textSize="13dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp" />

                <EditText
                    android:inputType="textPassword"
                    android:background="@null"
                    android:id="@+id/nuser_pw"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/input_name"
                    android:textSize="13dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp" />

                <EditText
                    android:background="@null"
                    android:id="@+id/nuser_name"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/input_phone"
                    android:textSize="13dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp" />

                <EditText
                    android:background="@null"
                    android:id="@+id/nuser_phone"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:scaleType="fitXY" />
        </RelativeLayout>

        <Button
            android:background="@drawable/next"
            android:id="@+id/next"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="60dp" />

</LinearLayout>